<!-- popup_service.ejs -->
<div id="popup-form" class="popup-overlay">
    <div class="popup-content popup-fast-service">
        <span id="close-btn" class="close-btn">&times;</span>
        <h3>Booking Form</h3>
        <form id="booking-form" method="post" action="/fast-track-service">
            <div class="form-group">
                <label for="full-name">Full Name</label>
                <input type="text" id="full-name" name="full-name" placeholder="type your name..." required>
            </div>
            <div class="form-group">
                <label for="nationality">Nationality</label>
                <select id="nationality" name="nationality" required>
                    <option value="">Select nationality</option>
                    <!-- Options will be loaded dynamically from JS -->
                </select>
            </div>

            <!-- This will get updated dynamically -->
            <input type="hidden" id="service-type" name="service-type" value="">

            <div class="form-group">
                <label for="phone-number">Phone Number (WhatsApp)</label>
                <input type="text" id="phone-number" name="phone-number" placeholder="+20..." required>
                <p class="text-secondary" style="font-size: 12px;font-weight: bold;">Enter a valid WhatsApp number with the country code (e.g., +20XXXXXXXXX)</p>
            </div>
            <div class="form-group">
                <label for="gender">Gender</label>
                <select id="gender" name="gender" required>
                    <option value="">Select...</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <!-- Add ticketing form -->
            <div id="ticketing-fields" style="display: none;">
                <div class="form-group">
                    <label for="type-plan">Type of Plan</label>
                    <select id="type-plan" name="type-plan">
                        <option value="">Select...</option>
                        <option value="one way">One Way</option>
                        <option value="two way">Two Way</option>
                    </select>
                </div>

                <div id="date-fields" class="form-group">
                    <label for="from-date">Departure Date</label>
                    <input type="date" id="from-date" name="from-date">

                    <div id="return-date-group" style="display: none; margin-top: 10px;">
                        <label for="to-date">Return Date</label>
                        <input type="date" id="to-date" name="to-date">
                    </div>
                </div>

                <div class="form-group">
                    <label for="from-country">From Country</label>
                    <input type="text" id="from-country" name="from-country" placeholder="Enter origin country">
                </div>

                <div class="form-group">
                    <label for="to-country">To Country</label>
                    <input type="text" id="to-country" name="to-country" placeholder="Enter destination country">
                </div>
            </div>

            <div class="form-group">
                <label for="extra-note">Extra Note (Optional)</label>
                <textarea id="extra-note" name="extra-note" rows="4" placeholder="help us to know more about your preferences..."></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        </form>
    </div>
</div>
